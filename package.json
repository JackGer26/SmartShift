{
  "name": "smartshift-restaurant-rota",
  "version": "1.0.0",
  "description": "Restaurant Rota Builder MVP - Automated staff scheduling system",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "start": "npm run server:start",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "restaurant",
    "scheduling",
    "rota",
    "staff",
    "management",
    "react",
    "express",
    "mongodb"
  ],
  "author": "SmartShift Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/smartshift-restaurant-rota.git"
  },
  "workspaces": [
    "client",
    "server"
  ]
}